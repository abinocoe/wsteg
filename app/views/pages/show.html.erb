<% if @page.indexpertise %>
    <ul id="sidebar">
        <% @pages.each do |page| %>
            <li><%= link_to page.title, page_path(page) %></li>
        <% end %>
    </ul>
<% end %>
    
<h1><%= @page.title  %></h1>
<div><%= @page.body.html_safe  %></div>

<% if current_user %> 
    <%= link_to 'Edit', edit_page_path(@page) %>
    <%= link_to 'Delete', page_path(@page), method: :destroy, data: { confirm: 'Are you sure you want to delete this page, Steve? This action cannot be undone.' } %>
    <%= link_to 'Add new page', new_page_path %>
<% end %>