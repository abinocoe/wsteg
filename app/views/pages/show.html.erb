<% if @page.indexpertise %>
    <ul class="sidebar">
        <% @pages.each do |page| %>
            <li><%= link_to page.title, page_path(page), class: current_class?(page_path(page)) %></li>
        <% end %>
    </ul>
<% end %>

<div class="page-content <%= @page.title.downcase %>">
    <h1><%= @page.title  %></h1>
    <div><%= @page.body.html_safe  %></div>

    <% if current_user %> 
        <%= link_to 'Edit', edit_page_path(@page) %>
        <%= link_to 'Delete', page_path(@page), method: :delete, data: { confirm: 'Are you sure you want to delete this page, Steve? This action cannot be undone.' } %>
        <%= link_to 'Add new page', new_page_path %>
    <% end %>
</div>    

<% if current_page?(root_url) || current_page?('/pages/Contact') %>
    <div class="portrait">
        <%= image_tag 'WSteG.jpg' %>
    </div>
<% end %>