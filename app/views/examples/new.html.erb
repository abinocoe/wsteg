<%= form_with model: @example, url: {action: "create"}, local: true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label "Publisher (including preposition such as 'for Eyewear')" %>
    <%= f.text_field :publisher %>
    <%= f.label :pdf %>
    <%= f.file_field :pdf %>
    <%= f.submit %>
<% end  %>

<% if @example.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@example.errors.count, "error")} prohibited this example from being saved:" %>
      </h2>
      <ul>
        <% @example.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>
