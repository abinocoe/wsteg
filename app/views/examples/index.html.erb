<% @examples.each do |example| %>
  <div><%= link_to example.title, example.pdf.url, target: '_blank' %></div>
  
  <% if current_user %>
    <div><%= link_to 'Edit', edit_example_path(example) %></div>
    <div><%= link_to 'Delete', example_path(example), method: :delete, data: { confirm: 'Are you sure you want to delete this pdf, Steve? This action cannot be undone.' } %></div>
  <% end %>

<% end %>
<hr>
<% if current_user %>
  <%= link_to 'Add new pdf example', new_example_path %>  
<% end %>
