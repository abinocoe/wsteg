<div id="header">
  <ul id="main-menu">

    <li>W Stephen Gilbert - Indexer</li>
    <% @links.each do |link| %>
        <li><%= link_to link.title.upcase, page_path(link), class: current_class?(page_path(link)) %></li>
    <% end %>
    <li><%= link_to 'INDEXAMPLES', root_path, class: current_class?(root_path) %></li> 

